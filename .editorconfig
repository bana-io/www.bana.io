# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

[*.js]
quote_type = single

[*.json]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.yml, *.yaml]
indent_style = space
indent_size = 2

# [{*.json,*.json.example,*.gyp,*.yml,*.yaml}]
# indent_style = space
# indent_size = 2

[*.rs]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4
