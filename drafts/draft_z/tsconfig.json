{
    "compilerOptions": {
        "target": "esnext",
        "declaration": true,
        "esModuleInterop": true,
        "pretty": true,
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "es2016.array.include"
        ],
        "allowSyntheticDefaultImports": true,
        "stripInternal": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "alwaysStrict": true,
        "module": "commonjs",
        "outDir": "lib",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "webpack-env",
            "node",
        ],
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "dist",
        "dist/",
        "dist/**/*",
        "docs/.temp",
        "docs/.temp/",
        "docs/.temp/**/*",
        "docs/.cache",
        "docs/.cache/",
        "docs/.cache/**/*",
        // "docs/*",
        // "docs/**",
        // "docs/**/*",
        // "./docs/*",
        // "./docs/**",
        // "./docs/**/*",
    ],
    "include": [
        "./docs/.vuepress/*",
        "./docs/.vuepress/*.js",
        "./docs/.vuepress/**/*",
        "./docs/.vuepress/**/*.js",
        "docs/.vuepress/*",
        "docs/.vuepress/*.js",
        "docs/.vuepress/**/*",
        "docs/.vuepress/**/*.js",
    ],
}
